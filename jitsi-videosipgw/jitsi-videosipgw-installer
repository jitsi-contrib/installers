    $JITSI_TMPL/usr/share/jitsi-meet/static/sip-people-sample.json

sed -i "/^\s*enableFeaturesBasedOnToken/a \
\\
\n\
\    peopleSearchQueryTypes: ['conferenceRooms'],\n\
\    peopleSearchUrl: 'https://$JITSI_HOST/static/sip-people-sample.json'," \
