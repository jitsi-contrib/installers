# -----------------------------------------------------------------------------
# SIP dialing plan (extra)
# -----------------------------------------------------------------------------
# deno
LATEST=$(curl -sSf https://github.com/denoland/deno/releases | \
    grep -o "/denoland/deno/releases/download/.*/deno-.*linux.*\.zip" | \
    head -n1)

cd /tmp
wget -T 30 -O deno.zip https://github.com/$LATEST
unzip -o deno.zip
cp /tmp/deno /usr/local/bin/

# sip-dial-plan
su -l jibri <<EOS
set -e

git clone https://github.com/jitsi-contrib/sip-dial-plan.git
EOS

sed -i "/TOKEN_SECRET/ s/\".*\"/\"$APP_SECRET\"/" \
    /home/jibri/sip-dial-plan/config.ts



# -----------------------------------------------------------------------------
# PJSUA related (extra)
# -----------------------------------------------------------------------------
# build
mkdir /home/jibri/src
chown jibri:jibri /home/jibri/src

su -l jibri <<EOS
set -e

cd ~/src

git clone -b $PJPROJECT_BRANCH $PJPROJECT_REPO
cd pjproject

./configure
make dep
make
EOS

cp /home/jibri/src/pjproject/pjsip-apps/bin/pjsua-x86_64-unknown-linux-gnu \
    /usr/local/bin/pjsua
chmod 755 /usr/local/bin/pjsua

# pjsua scripts
wget -T 10 -O /opt/jitsi/jibri/pjsua.sh $JIBRI_TMPL/opt/jitsi/jibri/pjsua.sh
wget -T 10 -O /opt/jitsi/jibri/finalize_sip.sh \
    $JIBRI_TMPL/opt/jitsi/jibri/finalize_sip.sh

# pjsua configuration is ok
timeout 8 curl -s "$CHECKMYPORT?proto=udp&port=60000&text=ok-conf-pjsua" \
    >/dev/null || true


